{
  "env": {
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "max-depth": ["error", 2],
    "no-unused-vars": "warn",
    "eqeqeq": "error",
    "max-lines-per-function": ["error", { "max": 15 }],
    "lines-between-class-members": "off"
  }
}
